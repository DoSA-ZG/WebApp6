<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />

    <title>Project Handler</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/planProjekta.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/jqueryui/themes/base/jquery-ui.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.25.0/font/bootstrap-icons.css" asp-append-version="true" />
    @RenderSection("styles", required: false)
</head>
<body>
    <partial name="_Nav" />
    <div class="container body-container">
        @RenderBody()
    </div>

    <script>
        window.applicationBaseUrl = '@Url.Content("~/")';
    </script>

    <script src="~/lib/jquery/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <link rel="stylesheet" href="~/lib/toastr.js/toastr.css" />
    <script src="~/lib/toastr.js/toastr.min.js"></script>

    <script>
        toastr.options = {
            closeButton: true,
            progressBar: true,
            positionClass: 'toast-top-right'
        };
    </script>

    <script>
        // Toastr notifikaciju ako postoji TempData["SuccessMessage"]
        var successMessage = '@TempData["SuccessMessage"]';
        if (successMessage) {
            toastr.success(successMessage);

        }
        // Toastr notifikaciju ako postoji TempData["warningMessage"]
        var warningMessage = '@TempData["warningMessage"]';
        if (warningMessage) {
            toastr.warning(warningMessage);

        }

        var errorMessage = '@TempData["errorMessage"]';
        if (errorMessage) {
            toastr.error(errorMessage);

        }
    </script>
    <partial name="HandleMessage" />
    @RenderSection("scripts", required: false)
</body>
</html>
